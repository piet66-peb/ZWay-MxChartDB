{
  "singleton": false,
  "dependencies": [
    "Cron",
    "MxBaseModule"
  ],
  "category": "logging",
  "author": "piet66",
  "homepage": "https://github.com/piet66-peb?tab=repositories",
  "icon": "icon.png",
  "moduleName": "MxChartDB",
  "version": "3.6.0",
  "maturity": "stable",
  "repository": {
    "type": "git",
    "source": "https://github.com/piet66-peb/ZWay-MxChartDB"
  },
  "defaults": {
    "title": "__m_title__",
    "description": "__m_descr__",
    "logging": false,
    "chartTitle": "__m_title__",
    "lang": "system",
    "startFullTimes": false,
    "interval": "month",
    "initialInterval": "day",
    "opacity": 60,
    "DBName": "MxChartDB",
    "COMMENT": "remaining defaults are defined in postRender.js"
  },
  "schema": {
    "type": "object",
    "properties": {
      "logging": {
        "type": "boolean"
      },
      "indexDB_last": {
        "COMMENT": "field must be hidden, but NOT readonly!!",
        "type": "integer"
      },
      "chartTitle": {
        "type": "string",
        "required": true
      },
      "DBName": {
        "type": "string",
        "required": true
      },
      "IndexDBName": {
        "type": "string",
        "readonly": true
      },
      "chartId": {
        "type": "string",
        "readonly": true
      },
      "dataControl": {
        "type": "object",
        "properties": {
          "dc_method": {
            "type": "select",
            "required": true,
            "default": "dc_clear",
            "enum": [
              "dc_clear",
              "dc_normal",
              "dc_continue"
            ]
          }
        }
      },
      "lang": {
        "enum": [
          "system",
          "de",
          "en"
        ],
        "required": true,
        "type": "string"
      },
      "store_value_set": {
        "type": "object",
        "properties": {
          "poll_method": {
            "type": "select",
            "required": true,
            "default": "poll_value_change",
            "enum": [
              "poll_never",
              "poll_interval",
              "poll_value_change",
              "poll_interval_rectangle",
              "poll_interval_value_change",
              "poll_once"
            ]
          },
          "run_after_start": {
            "dependencies": "poll_method",
            "type": "boolean"
          },
          "period": {
            "dependencies": "poll_method",
            "type": "select",
            "required": true,
            "default": "15",
            "enum": [
              "1",
              "2",
              "5",
              "10",
              "15",
              "20",
              "30",
              "60",
              "120",
              "240",
              "360",
              "720",
              "1440",
              "10080"
            ]
          },
          "startFullTimes": {
            "dependencies": "poll_method",
            "type": "boolean"
          }
        }
      },
      "interval": {
        "enum": [
          "infinite",
          "day",
          "2days",
          "week",
          "2weeks",
          "month",
          "year"
        ],
        "required": true,
        "type": "string"
      },
      "initialInterval": {
        "enum": [
          "complete",
          "hour",
          "day",
          "2days",
          "week",
          "2weeks",
          "month"
        ],
        "required": true,
        "type": "string"
      },
      "axes": {
        "type": "object",
        "properties": {
          "time_label": {
            "default": "null",
            "type": "string",
            "required": true
          },
          "positionYAxis": {
            "type": "select",
            "required": true,
            "default": "right",
            "enum": [
              "right",
              "left"
            ]
          },
          "limitYAxis": {
            "type": "number",
            "required": false
          },
          "y1Label": {
            "default": "null",
            "type": "string",
            "required": true
          },
          "lowerLimitY1": {
            "type": "number",
            "required": false
          },
          "upperLimitY1": {
            "type": "number",
            "required": false
          },
          "y2Label": {
            "default": "null",
            "type": "string",
            "required": true
          },
          "lowerLimitY2": {
            "type": "number",
            "required": false
          },
          "upperLimitY2": {
            "type": "number",
            "required": false
          }
        }
      },
      "opacity": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100,
        "required": true
      },
      "nonnumericLabels": {
        "type": "object",
        "properties": {
          "convertOnOff": {
            "type": "boolean"
          },
          "use_nonnumeric": {
            "type": "boolean"
          },
          "y3Labeling": {
            "dependencies": "use_nonnumeric",
            "required": true,
            "default": "on,off",
            "type": "string"
          },
          "y3IconsPath_Default": {
            "dependencies": "use_nonnumeric",
            "required": false,
            "default": "",
            "type": "string"
          },
          "y3Icons": {
            "dependencies": "use_nonnumeric",
            "required": true,
            "default": "switch-on,switch-off",
            "type": "string"
          },
          "y3IconsWidth": {
            "dependencies": "use_nonnumeric",
            "required": true,
            "default": 2.5,
            "type": "number",
            "minimum": 0
          },
          "y3reduceUnusedTicks": {
            "dependencies": "use_nonnumeric",
            "type": "boolean"
          },
          "y3leastTicks": {
            "dependencies": [
              "use_nonnumeric",
              "y3reduceUnusedTicks"
            ],
            "type": "number",
            "minimum": 2
          }
        }
      },
      "specials": {
        "type": "object",
        "properties": {
          "nightBackground": {
            "type": "boolean"
          }
        }
      },
      "sensors": {
        "minItems": 1,
        "type": "array",
        "items": {
          "properties": {
            "index": {
              "readonly": true,
              "required": false
            },
            "entrytype": {
              "type": "select",
              "required": true,
              "default": "sensor",
              "enum": [
                "sensor",
                "formula",
                "disabled"
              ]
            },
            "device": {
              "dependencies": "entrytype",
              "field": "enum",
              "datasource": "namespaces",
              "enum": "namespaces:devices_all:deviceId",
              "required": true
            },
            "metric": {
              "dependencies": "entrytype",
              "required": true,
              "type": "string",
              "default": "level"
            },
            "tooltip_metric": {
              "dependencies": "entrytype",
              "required": false,
              "type": "string"
            },
            "formula": {
              "dependencies": "entrytype",
              "type": "string",
              "required": false
            },
            "devlabel": {
              "dependencies": "entrytype",
              "type": "string",
              "required": false
            },
            "color": {
              "dependencies": "entrytype",
              "type": "string",
              "required": false
            },
            "graphType": {
              "dependencies": "entrytype",
              "type": "select",
              "required": false,
              "enum": [
                "rectangle",
                "rectangle_left",
                "interpolated",
                "points",
                "pointseries",
                "straightlines",
                "straightpoints",
                "interpolatedpoints",
                "bar",
                "bar_overlap"
              ]
            },
            "lineType": {
              "dependencies": "entrytype",
              "type": "select",
              "required": true,
              "enum": [
                "continuous",
                "dashed",
                "dotted",
                "invisible"
              ]
            },
            "spanGaps": {
              "dependencies": "entrytype",
              "type": "boolean",
              "required": false,
              "default": false
            },
            "fill": {
              "dependencies": "entrytype",
              "type": "string",
              "required": false
            },
            "usedYAxe": {
              "dependencies": "entrytype",
              "type": "select",
              "required": false,
              "enum": [
                "1_axe",
                "2_axe"
              ]
            },
            "chartHidden": {
              "dependencies": "entrytype",
              "type": "boolean",
              "required": true,
              "default": false
            },
            "intcharticon": {
              "dependencies": "entrytype",
              "type": "boolean",
              "required": true,
              "default": false
            }
          },
          "type": "object"
        }
      },
      "global_js": {
        "type": "object",
        "properties": {
          "define_global_js": {
            "type": "boolean"
          },
          "lines": {
            "dependencies": "define_global_js",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "code": {
            "dependencies": "define_global_js",
            "type": "string"
          }
        }
      },
      "post_processing": {
        "type": "object",
        "properties": {
          "define_post_processing": {
            "type": "boolean"
          },
          "lines": {
            "dependencies": "define_post_processing",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "code": {
            "dependencies": "define_post_processing",
            "type": "string"
          }
        }
      },
      "post_calc": {
        "minItems": 0,
        "type": "array",
        "items": {
          "properties": {
            "text_calc": {
              "type": "string"
            },
            "form_calc": {
              "type": "string"
            }
          },
          "type": "object",
          "required": true
        }
      }
    }
  },
  "options": {
    "fields": {
      "logging": {
        "type": "checkbox",
        "rightLabel": "__logging_label__"
      },
      "indexDB_last": {
        "hidden": true,
        "COMMENT": "field must be hidden, but NOT readonly!!",
        "label": "__indexDB_last__",
        "helper": "__index-helper__"
      },
      "chartTitle": {
        "label": "__chartTitle_label__",
        "helper": "__chartTitle_helper__"
      },
      "DBName": {
        "label": "__DBName_label__",
        "helper": "__DBName_helper__"
      },
      "IndexDBName": {
        "label": "__IndexDBName_label__",
        "helper": "__IndexDBName_helper__"
      },
      "chartId": {
        "label": "__chartId_label__",
        "helper": "__chartId_helper__"
      },
      "dataControl": {
        "fieldClass": "dataControl",
        "label": "__dataControl__",
        "fields": {
          "dc_method": {
            "type": "select",
            "hideNone": true,
            "optionLabels": [
              "__dc_clear__",
              "__dc_normal__",
              "__dc_continue__"
            ]
          }
        }
      },
      "lang": {
        "label": "__lang_label__",
        "optionLabels": [
          "__lang_system__",
          "__lang_de__",
          "__lang_en__"
        ],
        "type": "select"
      },
      "store_value_set": {
        "fieldClass": "store_value_set",
        "label": "__store_value_set__",
        "fields": {
          "poll_method": {
            "type": "select",
            "hideNone": true,
            "optionLabels": [
              "__poll_never__",
              "__poll_interval__",
              "__poll_value_change__",
              "__poll_interval_rectangle__",
              "__poll_interval_value_change__",
              "__poll_once__"
            ]
          },
          "run_after_start": {
            "dependencies": {
              "poll_method": [
                "poll_interval",
                "poll_value_change",
                "poll_interval_rectangle",
                "poll_interval_value_change",
                "poll_once"
              ]
            },
            "rightLabel": "__run_after_start__",
            "type": "checkbox"
          },
          "period": {
            "dependencies": {
              "poll_method": [
                "poll_interval",
                "poll_interval_rectangle",
                "poll_interval_value_change"
              ]
            },
            "label": "__l_period__",
            "type": "select",
            "default": "15",
            "optionLabels": [
              "minute",
              "minutes_02",
              "minutes_05",
              "minutes_10",
              "minutes_15",
              "minutes_20",
              "minutes_30",
              "hour",
              "hours_2",
              "hours_4",
              "hours_6",
              "twice_per_day",
              "daily",
              "weekly"
            ]
          },
          "startFullTimes": {
            "dependencies": {
              "poll_method": [
                "poll_interval",
                "poll_interval_rectangle",
                "poll_interval_value_change"
              ]
            },
            "type": "checkbox",
            "rightLabel": "__startFullTimes__",
            "helpers": [
              "__startFullTimes_helper1__",
              "__startFullTimes_helper2__",
              "__startFullTimes_helper3__"
            ]
          }
        }
      },
      "interval": {
        "helper": "__interval_helper__",
        "label": "__interval_label__",
        "optionLabels": [
          "__interval_infinite__",
          "__interval_day__",
          "__interval_2days__",
          "__interval_week__",
          "__interval_2weeks__",
          "__interval_month__",
          "__interval_year__"
        ],
        "type": "select"
      },
      "initialInterval": {
        "label": "__initialInterval__",
        "optionLabels": [
          "__initialInterval_complete__",
          "__initialInterval_hour__",
          "__initialInterval_day__",
          "__initialInterval_2days__",
          "__initialInterval_week__",
          "__initialInterval_2weeks__",
          "__initialInterval_month__"
        ],
        "type": "select"
      },
      "axes": {
        "fieldClass": "axes",
        "label": "__axes__",
        "fields": {
          "time_label": {
            "helper": "__l_time_helper__",
            "label": "__l_time_label__"
          },
          "positionYAxis": {
            "type": "select",
            "hideNone": true,
            "label": "__positionYAxis_label__",
            "optionLabels": [
              "__right__",
              "__left__"
            ]
          },
          "limitYAxis": {
            "label": "__limitYAxis_label__",
            "helper": "__limitYAxis_helper__"
          },
          "y1Label": {
            "helper": "__y1Label_helper__",
            "label": "__y1Label__"
          },
          "lowerLimitY1": {
            "label": "__lowerLimitY1__"
          },
          "upperLimitY1": {
            "label": "__upperLimitY1__"
          },
          "y2Label": {
            "helper": "__y2Label_helper__",
            "label": "__y2Label__"
          },
          "lowerLimitY2": {
            "label": "__lowerLimitY2__"
          },
          "upperLimitY2": {
            "label": "__upperLimitY2__"
          }
        }
      },
      "opacity": {
        "label": "__opacity_label__",
        "helper": "__opacity_helper__"
      },
      "nonnumericLabels": {
        "fieldClass": "nonnumericLabels",
        "label": "__nonnumericLabels__",
        "fields": {
          "convertOnOff": {
            "type": "checkbox",
            "rightLabel": "__convertOnOff__"
          },
          "use_nonnumeric": {
            "type": "checkbox",
            "rightLabel": "__use_nonnumeric__",
            "helpers": [
              "__nonnumericLabels_helper1__",
              "__nonnumericLabels_helper2__"
            ]
          },
          "y3Labeling": {
            "dependencies": {
              "use_nonnumeric": true
            },
            "helpers": [
              "__y3Labeling_helper1__",
              "__y3Labeling_helper2__",
              "__y3Labeling_helper3__"
            ],
            "label": "__y3Labeling__",
            "placeholderX": "on,off"
          },
          "y3IconsPath_Default": {
            "dependencies": {
              "use_nonnumeric": true
            },
            "label": "__y3IconsPath__",
            "placeholder": "./myIcons/"
          },
          "y3Icons": {
            "dependencies": {
              "use_nonnumeric": true
            },
            "helpers": [
              "__y3Icons_helper1__",
              "__y3Icons_helper2__",
              "__y3Icons_helper3__",
              "__y3Icons_helper4__"
            ],
            "label": "__y3Icons__",
            "placeholderX": "switch-on,switch-off"
          },
          "y3IconsWidth": {
            "dependencies": {
              "use_nonnumeric": true
            },
            "label": "__y3IconsWidth__",
            "placeholderX": 2.5
          },
          "y3reduceUnusedTicks": {
            "dependencies": {
              "use_nonnumeric": true
            },
            "type": "checkbox",
            "rightLabel": "__y3reduceUnusedTicks__"
          },
          "y3leastTicks": {
            "dependencies": {
              "y3reduceUnusedTicks": true,
              "use_nonnumeric": true
            },
            "label": "__y3leastTicks__",
            "placeholderX": 2
          }
        }
      },
      "specials": {
        "fieldClass": "specials",
        "fields": {
          "nightBackground": {
            "type": "checkbox",
            "rightLabel": "__nightBackground__",
            "helper": "__nightText__"
          }
        }
      },
      "sensors": {
        "label": "__l_sensors__",
        "fieldClass": "sensorsArray",
        "items": {
          "fieldClass": "sensorsFields",
          "fields": {
            "index": {
              "fieldClass": "index",
              "type": "integer",
              "label": "__index-label__",
              "helper": "__index-helper__"
            },
            "entrytype": {
              "type": "select",
              "label": "__entrytype__",
              "optionLabels": [
                "__entrytype_sensor__",
                "__entrytype_formula__",
                "__entrytype_disabled__"
              ]
            },
            "device": {
              "dependencies": {
                "entrytype": "sensor"
              },
              "fieldClass": "device",
              "label": "__device-label__",
              "removeDefaultNone": false,
              "noneLabel": "__choose__",
              "type": "select",
              "datasource": "namespaces",
              "field": "optionLabels",
              "optionLabels": "namespaces:devices_all:deviceName"
            },
            "metric": {
              "dependencies": {
                "entrytype": "sensor"
              },
              "fieldClass": "metric",
              "label": "__metric-label__",
              "helper": "__metric-helper__"
            },
            "tooltip_metric": {
              "dependencies": {
                "entrytype": "sensor"
              },
              "fieldClass": "tooltip_metric",
              "label": "__tooltip-label__",
              "helper": "__tooltip-helper__"
            },
            "formula": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "fieldClass": "javascript formula",
              "label": "__formula-label__",
              "helpers": [
                "__formula-helper__",
                "__formula-helper2__"
              ]
            },
            "devlabel": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "label": "__devlabel_label__",
              "helper": "__devlabel_helper__"
            },
            "color": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "fieldClass": "color",
              "label": "__color_label__"
            },
            "graphType": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "label": "__graphType_label__",
              "type": "select",
              "optionLabels": [
                "__graphType_rectangle__",
                "__graphType_rectangle_left__",
                "__graphType_interpolated__",
                "__graphType_points__",
                "__graphType_pointseries__",
                "__graphType_straightlines__",
                "__graphType_straightpoints__",
                "__graphType_interpolatedpoints__",
                "__graphType_bar__",
                "__graphType_bar_overlap__"
              ]
            },
            "lineType": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "label": "__lineType_label__",
              "type": "select",
              "optionLabels": [
                "__lineType_continuous__",
                "__lineType_dashed__",
                "__lineType_dotted__",
                "__lineType_invisible__"
              ]
            },
            "spanGaps": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "type": "checkbox",
              "rightLabel": "__spanGaps__"
            },
            "fill": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "fieldClass": "fill",
              "label": "__fill_label__",
              "helpers": [
                "__fill_helper1__",
                "__fill_helper2__",
                "__fill_helper3__",
                "__fill_helper4__"
              ]
            },
            "usedYAxe": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "label": "__usedYAxe__",
              "type": "select",
              "optionLabels": [
                "__1_axe__",
                "__2_axe__"
              ]
            },
            "chartHidden": {
              "dependencies": {
                "entrytype": [
                  "sensor",
                  "formula"
                ]
              },
              "type": "checkbox",
              "rightLabel": "__chartHidden__"
            },
            "intcharticon": {
              "dependencies": {
                "entrytype": "sensor"
              },
              "type": "checkbox",
              "rightLabel": "__intcharticon_label__",
              "helper": "__intcharticon_helper__"
            }
          }
        }
      },
      "global_js": {
        "fieldClass": "global_js",
        "label": "__global_js__",
        "helpers": [
          "__global_js_helper1__"
        ],
        "fields": {
          "define_global_js": {
            "type": "checkbox",
            "rightLabel": "__define_global_js__"
          },
          "lines": {
            "dependencies": {
              "define_global_js": true
            },
            "id": "global_js_line",
            "label": "__lines__"
          },
          "code": {
            "dependencies": {
              "define_global_js": true
            },
            "fieldClass": "javascript global_js_code",
            "id": "global_js_code",
            "label": "__code__",
            "helper": "__code_helper__",
            "type": "textarea",
            "rows": 0,
            "placeholder": "{\n    v1: <value>,\n    v2: <value>,\n    f1: function(a, b, c) = {\n      return <value>;\n};"
          }
        }
      },
      "post_processing": {
        "fieldClass": "post_processing",
        "label": "__post_processing__",
        "helpers": [
          "__post_processing_helper1__"
        ],
        "fields": {
          "define_post_processing": {
            "type": "checkbox",
            "rightLabel": "__define_post_processing__"
          },
          "lines": {
            "dependencies": {
              "define_post_processing": true
            },
            "id": "post_processing_line",
            "label": "__lines__"
          },
          "code": {
            "dependencies": {
              "define_post_processing": true
            },
            "fieldClass": "javascript post_processing_code",
            "id": "post_processing_code",
            "label": "__code__",
            "type": "textarea",
            "rows": 0
          }
        }
      },
      "post_calc": {
        "fieldClass": "post_calc",
        "label": "__post_calc__",
        "helpers": [
          "__post_calc_helper1__"
        ],
        "items": {
          "fieldClass": "post_calcFields",
          "fields": {
            "text_calc": {
              "label": "__text_calc__"
            },
            "form_calc": {
              "fieldClass": "javascript form_calc",
              "label": "__form_calc__"
            }
          }
        }
      }
    }
  },
  "postRender": "loadFunction:postRender.js"
}
